<h3>Total Spend:
    <%= dollar_display(current_user.expenses.sum(:amount)) %>
  </h3>


<div class="container">
<% @categories.each do |c| %>
  <div class="tile">
    <div class="tile_name"><a href="/categories/<%=c.id%>"><%= c.name %></a></div>
    <div class="tile_sum"><%= dollar_display(c.expense_sum) %></div>
  </div>
<% end %>
</div>
